<div class="container col-12 mx-auto">
    <div class="row justify-content-center mx-auto">
        <div class="card col-auto p-4 m-4">
            <% if @private_message.errors.any? %>
                <div class="alert alert-danger" role="alert">
                    <p>La création du message a échoué en raison de :</p>
                    <ul>
                        <% @private_message.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>


            <h1>Nouveau Message</h1>

            <%= render 'form', private_message: @private_message %>

            <%= link_to 'Back', new_user_private_message_path(current_user.id) %>
        </div>
    </div>
</div>
