<div class="container col-12 mx-auto">
    <div class="row justify-content-center mx-auto">
        <% @books.each do |book| %>
            <div class="card col-4 views p-4 m-4">
                <% if !book.picture.nil? %>
                    <img class="card-img-top img-views mx-auto" src="<%=book.picture[0...-1]+"2"%>" alt="Card image cap"/>
                <% else %>
                    <img class="card-img-top img-views mx-auto" src="" alt="Card image cap"/>
                <% end %>
                <div class="card-body views mx-auto">
                    <p class="card-title mx-auto"><%=book.title%></p>
                </div>
                <div class="d-flex justify-content-sm-center">
                    <div class="row viewsbutton mx-auto">
                        <div class="col mx-auto"><%= button_to "Consulter", book_path(book.id), method: :get , class: "btn btn-info align-self-center mx-auto" %></div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
