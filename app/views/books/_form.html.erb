<%= form_with(model: @book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" id="alert_message" role="alert">
      <h2><%= pluralize(book.errors.count, "erreur") %> a empeché cette fiche d'être sauvegardé:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>


  <div class="form-row">
    <div class="field form-group-sm col-8">
      <%= form.label :titre %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="field form-group-sm col-4">
      <%= form.label :auteur %>
      <%= form.text_field :author, class: 'form-control' %>
    </div>
  </div>

    <div class="field form-group-sm">
      <%= form.label :genre %>
      <%= form.text_field :genre, class: 'form-control' %>
    </div>

    <div class="field form-group-sm col-4">
      <%= form.label :isbn %>
      <%= form.text_field :isbn, class: 'form-control' %>
    </div>
  </div>

    <div class="field form-group-sm col-4">
      <%= form.label :image %>
      <%= form.text_field :picture, class: 'form-control' %>
    </div>
  </div>

    <div class="field form-group-sm col-4">
      <%= form.label :resumé %>
      <%= form.text_area :abstract, class: 'form-control' %>
    </div>
  </div>

    <div class="field form-group-sm col-4">
      <%= form.label :extrait %>
      <%= form.text_area :extract, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Valider', class:"btn-sm btn-primary" %>
  </div>
<% end %>



